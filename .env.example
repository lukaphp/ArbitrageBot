# ========================================
# CONFIGURAZIONE ARBITRAGE BOT - TESTNET
# ========================================
# ATTENZIONE: Questo file contiene solo esempi
# Copiare in .env e inserire i valori reali
# NON committare mai il file .env nel repository

# ========================================
# CONFIGURAZIONE RETE
# ========================================
# Modalit√† di esecuzione (SEMPRE testnet per sviluppo)
NETWORK_MODE=testnet

# RPC URLs per testnet (Infura, Alchemy, o provider pubblici)
ETHEREUM_TESTNET_RPC=https://goerli.infura.io/v3/YOUR_PROJECT_ID
BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545
POLYGON_TESTNET_RPC=https://rpc-mumbai.maticvigil.com

# ========================================
# WALLET CONFIGURATION
# ========================================
# IMPORTANTE: Non inserire mai la seed phrase qui
# Utilizzare MetaMask o hardware wallet per firmare transazioni
WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# ========================================
# API KEYS (per raccolta dati prezzi)
# ========================================
# CoinGecko API (gratuita per uso limitato)
COINGECKO_API_KEY=your_coingecko_api_key_here

# 1inch API per aggregazione prezzi
ONEINCH_API_KEY=your_1inch_api_key_here

# Moralis API per dati blockchain
MORALIS_API_KEY=your_moralis_api_key_here

# ========================================
# PARAMETRI ARBITRAGGIO
# ========================================
# Profitto minimo per eseguire arbitraggio (in percentuale)
MIN_PROFIT_PERCENTAGE=0.5

# Importo massimo per transazione (in ETH/BNB/MATIC)
MAX_TRANSACTION_AMOUNT=0.1

# Gas price massimo accettabile (in Gwei)
MAX_GAS_PRICE=50

# Slippage tolerance (in percentuale)
SLIPPAGE_TOLERANCE=1.0

# ========================================
# CONFIGURAZIONE SICUREZZA
# ========================================
# Abilita controlli di sicurezza aggiuntivi
ENABLE_SECURITY_CHECKS=true

# Abilita simulazione prima dell'esecuzione
ENABLE_SIMULATION=true

# Limite giornaliero di transazioni
DAILY_TRANSACTION_LIMIT=10

# ========================================
# LOGGING E MONITORING
# ========================================
# Livello di log (debug, info, warn, error)
LOG_LEVEL=info

# Abilita salvataggio log su file
ENABLE_FILE_LOGGING=true

# Directory per i log
LOG_DIRECTORY=./logs

# ========================================
# CONFIGURAZIONE DEX
# ========================================
# DEX da monitorare (separati da virgola)
MONITORED_DEX=uniswap,sushiswap,pancakeswap

# Token da monitorare per arbitraggio
MONITORED_TOKENS=WETH,USDC,USDT,DAI

# Intervallo di aggiornamento prezzi (in millisecondi)
PRICE_UPDATE_INTERVAL=5000

# ========================================
# NOTIFICHE (opzionale)
# ========================================
# Webhook Discord per notifiche
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Email per notifiche critiche
NOTIFICATION_EMAIL=your-email@example.com

# ========================================
# CONFIGURAZIONE AVANZATA
# ========================================
# Timeout per richieste HTTP (in millisecondi)
HTTP_TIMEOUT=10000

# Numero massimo di retry per transazioni fallite
MAX_RETRY_ATTEMPTS=3

# Intervallo tra retry (in millisecondi)
RETRY_INTERVAL=2000